<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yn.mapper.PostLikeMapper">
    
    <insert id="insert" parameterType="com.yn.entity.PostLike">
        INSERT INTO post_likes(post_id, user_id)
        VALUES(#{postId}, #{userId})
    </insert>

    <delete id="delete" parameterType="map">
        DELETE FROM post_likes 
        WHERE post_id=#{postId} AND user_id=#{userId}
    </delete>

    <select id="exists" parameterType="map" resultType="int">
        SELECT COUNT(*) 
        FROM post_likes 
        WHERE post_id=#{postId} AND user_id=#{userId}
    </select>

    <select id="countByPostId" parameterType="long" resultType="int">
        SELECT COUNT(*)
        FROM post_likes
        WHERE post_id=#{postId}
    </select>

</mapper>